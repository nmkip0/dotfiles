# shift + ctrl + cmd = hyper --- basic
# hyper + alt --- super
# Window

# Change focus window
#shift + alt - h : yabai -m window --focus west
#shift + alt - j : yabai -m window --focus south
#shift + alt - k : yabai -m window --focus north
#shift + alt - l : yabai -m window --focus east


0x53 : yabai -m window --focus next || yabai -m window --focus first
0x54 : yabai -m window --focus prev || yabai -m window --focus last

# Resize window
hyper - l : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0
hyper - h : yabai -m window --resize right:-20:0 || yabai -m window --resize left:-20:0

# Swap windows
# hyper + j + cmd = cmd + keypad_1
cmd - 0x53 : yabai -m window --swap next || yabai -m window --swap first
# hyper + k + cmd = cmd + keypad_2
cmd - 0x54 : yabai -m window --swap prev || yabai -m window --swap last

# Focus window
# shift + alt - j : yabai -m window --focus next || yabai -m window --focus first
# shift + alt - k : yabai -m window --focus prev || yabai -m window --focus last

# Resize window
# shift + alt  - l : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0
# shift + alt  - h : yabai -m window --resize right:-20:0 || yabai -m window --resize left:-20:0

# Swap windows
# shift + alt + cmd - j : yabai -m window --swap next || yabai -m window --swap first
# shift + alt + cmd - k : yabai -m window --swap prev || yabai -m window --swap last
shift + alt - r : yabai -m space --rotate 90
shift + alt + cmd - r : yabai -m space --rotate 270


# Sticky
# shift + alt - s : yabai -m window --toggle sticky

# Fullscreen
shift + alt - f : yabai -m window --toggle zoom-fullscreen
# float / unfloat window and center on screen
cmd + shift + alt - u : yabai -m window --toggle float;yabai -m window --toggle topmost;yabai -m window --grid 12:12:2:2:8:8
cmd - f13 : yabai -m window --toggle float;yabai -m window --toggle topmost;yabai -m window --grid 12:12:2:2:8:8
cmd + shift + alt - i : yabai -m space --layout bsp
cmd + shift + alt - o : yabai -m space --layout float

# Move space left
# yabai -m space --move prev

# Move space right
# yabai -m space --move next

# Send space to display 2 (by display arrangement index)
cmd + shift + alt - l : yabai -m space --display next || yabai -m space --display first
cmd + shift + alt - h : yabai -m space --display prev || yabai -m space --display last

# Space
shift + alt - 0 : yabai -m space --balance

# send window to space n
cmd + shift + alt - 1 : yabai -m window --space  1
cmd + shift + alt - 2 : yabai -m window --space  2
cmd + shift + alt - 3 : yabai -m window --space  3
cmd + shift + alt - 4 : yabai -m window --space  4
cmd + shift + alt - 5 : yabai -m window --space  5
cmd + shift + alt - 6 : yabai -m window --space  6
cmd + shift + alt - 7 : yabai -m window --space  7
cmd + shift + alt - 8 : yabai -m window --space  8
cmd + shift + alt - 9 : yabai -m window --space  9

# focus space n
shift + alt - 1 : yabai -m space --focus 1
shift + alt - 2 : yabai -m space --focus 2
shift + alt - 3 : yabai -m space --focus 3
shift + alt - 4 : yabai -m space --focus 4
shift + alt - 5 : yabai -m space --focus 5
shift + alt - 6 : yabai -m space --focus 6
shift + alt - 7 : yabai -m space --focus 7
shift + alt - 8 : yabai -m space --focus 8
shift + alt - 9 : yabai -m space --focus 9
shift + alt - b : yabai -m space --focus "$(yabai-utils next-non-empty-space)"
cmd + shift + alt - b : yabai -m space --focus "$(yabai-utils prev-non-empty-space)"

# focus monitor
shift - 0x59 : yabai -m display --focus prev # || yabai -m display --focus last
shift - 0x5B : yabai -m display --focus next # || yabai -m display --focus first

